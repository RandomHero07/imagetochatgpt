{
  "manifest_version": 3,
  "name": "Image to ChatGPT",
  "version": "1.0",
  "description": "Extract text from image and send it to ChatGPT web chat.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://chat.openai.com/"]
}
